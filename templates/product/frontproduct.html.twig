{% extends 'base2.html.twig' %}
{% block title %}Détails Produit:{% endblock %}

{% block body %}
    <main role="main">
        <body style="text-align: center;background-color: whitesmoke">

        <h1 style="padding-top:40px ;margin-left: 100px;text-align: center;text-decoration-line: underline">Détails Produits :</h1>
<section>
        <table class="table" style="font-size: 25px;width: 100%;height: 100%;background: rgb(170,170,170);
background: -moz-linear-gradient(90deg, rgba(170,170,170,0.9272175422903537) 0%, rgba(198,198,198,0.9132119400494573) 8%, rgba(245,248,250,0.9244164218421744) 49%, rgba(187,186,186,0.9048085787049195) 91%, rgba(113,113,113,0.9496265058757878) 100%);
background: -webkit-linear-gradient(90deg, rgba(170,170,170,0.9272175422903537) 0%, rgba(198,198,198,0.9132119400494573) 8%, rgba(245,248,250,0.9244164218421744) 49%, rgba(187,186,186,0.9048085787049195) 91%, rgba(113,113,113,0.9496265058757878) 100%);
background: linear-gradient(90deg, rgba(170,170,170,0.9272175422903537) 0%, rgba(198,198,198,0.9132119400494573) 8%, rgba(245,248,250,0.9244164218421744) 49%, rgba(187,186,186,0.9048085787049195) 91%, rgba(113,113,113,0.9496265058757878) 100%);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#aaaaaa",endColorstr="#717171",GradientType=1);">
            <tbody>
            <tr>
                <td style="background: rgb(241,241,241);
                           background: linear-gradient(90deg, rgba(241,241,241,1) 0%, rgba(252,252,252,1) 35%, rgba(244,244,244,1) 100%);">
                    <img src="{{ asset('assets/img/') }}{{ produit.image }}" style="width: 30%;height: 30%" class="img-fluid mb-4 mt-4"> </td>
            </tr>
            <tr>
                <th style="text-decoration-line: underline">Id:</th>
            </tr>
            <td style="text-align: center">{{ produit.id }}</td>
            <tr>
                <th style="text-decoration-line: underline">Nom:</th>
            </tr>
            <td style="text-align: center">{{ produit.nom }}</td>
            <tr>
                <th style="text-decoration-line: underline">Référence:</th>
            </tr>
            <td style="text-align: center">{{ produit.reference}}</td>
            <tr>
                <th style="text-decoration-line: underline">Description</th>
            </tr>
            <td style="text-align: center;margin-top: 5px;border-style: solid">{{ produit.description }}</td>
            </tbody>
        </table>
</section>
        <a style="display: flex;flex-direction: column;text-align: center;justify-content: center;justify-items: center;margin-left: auto;margin-right: auto;margin-bottom: 20px" href="{{ path('cartadd',{id : produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        <a style="display: flex;flex-direction: column;text-align: center;justify-content: center;justify-items: center;margin-left: auto;margin-right: auto;margin-bottom: 20px" class="btn btn-secondary" href="{{ path('app_all_product')}}">Retour à la Boutique</a>
        </body>
    </main>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}ADMIN Categorie{% endblock %}

{% block body %}


    <h1 style="margin-top:60px;text-align: center;text-decoration-line: underline">Détails Categorie:</h1>

    <table class="table" style="height:100%">
        <tbody style="background: linear-gradient(90deg, rgba(170,170,170,0.9272175422903537) 0%, rgba(198,198,198,0.9132119400494573) 8%, rgba(245,248,250,0.9244164218421744) 49%, rgba(187,186,186,0.9048085787049195) 91%, rgba(113,113,113,0.9496265058757878) 100%);;text-align: center">
            <tr>
                <th>Id :</th>
                <td style="background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(193,193,193,1) 100%);text-align: center">{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom du produit :</th>
                <td style="background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(193,193,193,1) 100%);text-align: center">{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a style="display: flex;flex-wrap: nowrap;justify-content: center;align-items:center;margin-top: 15px;margin-bottom: 15px;margin-left:auto;margin-right:auto;font-weight:bolder" class="btn btn-success" href="{{ path('app_category_edit', {'id': category.id}) }}">Editer</a>

    <a style="display: flex;flex-wrap: nowrap;justify-content: center;align-items:center;margin-left:auto;margin-right:auto;font-weight:bolder" class="btn btn-primary" href="{{ path('app_category_index') }}">Retour à la liste</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}

{%  extends 'base.html.twig' %}


{%  block body %}
    <div class="container">

        <div class="row">

            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ asset('assets/img/') }}{{ product.image }}">
                        <h2>{{ product.nom }}</h2>
                        <div class="card-body">
                            <p class="card-text"> {{ product.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('productfront',{id:product.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">View</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
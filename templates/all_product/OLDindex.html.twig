{% extends 'base.html.twig' %}
{% block title %}Neoflips: Nos Pincabs{% endblock %}

{% block body %}
    <main role="main">
        <section class="jumbotron text-center"
                 style="background: url({{ asset('assets/img/colorfulbar.gif') }});
                         background-repeat: no-repeat;
                         background-size: cover;
                         margin-bottom: 0px;
                         font-size: 35px">
            <div class="container" style="color: whitesmoke;
            font-size: 40px;
            font-family: 'Lobster', 'AFM Pinball';">
                <div class="container" style="font-size: 58px">
<p>(Projet Etudiant - appli web temporaire)</p>
                </div>
            </div>
        </section>
        <section>
            <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" data-interval="10000">
                        <img src="{{ asset('assets/img/carousel/1.webp') }}" class="d-block w-100" alt="Image Pincab 1">
                    </div>
                    <div class="carousel-item" data-interval="2000">
                        <img src="{{ asset('assets/img/carousel/2.webp') }}" class="d-block w-100" alt="Image Pincab 2">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('assets/img/carousel/3.webp') }}" class="d-block w-100" alt="Image Pincab 3">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('assets/img/carousel/4.webp') }}" class="d-block w-100" alt="Image Pincab 4">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
        <section class="jumbotron text-center"
                 style="background: url({{ asset('assets/img/colorfulbar.gif') }});
                         background-repeat: no-repeat;
                         background-size: cover;
                         margin-bottom: 0px;
                         font-size: 35px">
            <div class="container" style="color: whitesmoke;
            font-size: 40px;
            font-family: 'Lobster', 'AFM Pinball';">
                <div class="container" style="font-size: 50px">
                    <div id="typed-strings2">
                        <p><strong>Nos Pincabs Disponibles:</strong></p>
                    </div>
                    <span id="typed2"></span>
                </div>
            </div>
        </section>

        <div class="album py-6 bg-light">

            <div class="container" style="
            max-width:90%;
    background-blend-mode: overlay;
            border-radius: 3%;
            ">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-4"
                             style="
                             display: flex;
                             margin-top: 20px;
                             margin-bottom: 10px;
                            text-align: center;
                            font-family: 'Lobster', 'AFM Pinball';">

                            <div class="card mb-4 shadow-sm" id="prodimage"
                                 style="
                                 margin-top: 10px;
                                 margin-bottom: 10px;
                                 padding: 5%;
                                 background: linear-gradient(0deg, rgba(223,223,223,0.9552287467721463) 59%, rgba(62,218,225,0.96) 65%);
                                 border-top-left-radius: 15%;
                                 border-top-right-radius: 15%;
                                 width: 100% ">

                                <div class="container-prod">
                                    <a href="{{ path('productfront',{id:product.id}) }}">
                                    <img src="{{ asset('assets/img/') }}{{ product.image }}"
                                     style="border-top-left-radius: 15%;
                                     border-top-right-radius: 15%;
                                       height: 500px"
                                     class="image-prod"
                                    alt="Image du Pincab">
                                    </a>

                                <div class="overlay-prod"style="display: flex;justify-content: center;flex-direction: column">
                                    <div style="color: #00a8fd;font-weight: bolder;font-size: 30px;font-family: {{ asset('assets/fonts/lobster-two-v18-latin-regular.woff') }}">{{ product.nom }}</div>
                                    <a href="{{ path('productfront',{id:product.id}) }}" style="font-size: 20px;width: 150px;height: 60px;flex-direction: row;margin-top: 10px;background-color: orangered;opacity: 95%;color: whitesmoke" alt="Fiche produit" class="btn"><p>Fiche Produit</p></a>
                                </div>
                                </div>

                                <div class="card-body" style="border-radius: 1%;
                                border-style: solid;
                                border-color: #0dcaf0;
                            background: linear-gradient(0deg, rgba(223,223,223,0.9552287467721463) 59%, rgba(255,255,255,0.9580298672203257) 100%);">
                                    <p class="card-text"
                                       style="color: black;
                                            font-size: 25px">
                                        {{ product.description }}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="accordion-button">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}